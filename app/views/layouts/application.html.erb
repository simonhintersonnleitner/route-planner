<!DOCTYPE html>
<html>
	<head>
		<title>Routenplaner</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?v=3.exp&amp;sensor=false' %>
		<%= csrf_meta_tags %>
	</head>
	<body>

		<header id="header">

			<div id="toggleNav">
				<span class="glyphicon glyphicon-resize-vertical" aria-hidden="true"></span>
			</div>

			<div id="topBar"></div>

			<nav class="navbar navbar-default navbar-static-top">
				<div id="logo" class="navbar-brand">
					<a href="#">Routenplaner</a>
				</div>

				<div class="container">
					<div class="navbar-header">


						
	          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
	          </button>
					</div>
					<div id="navbar" class="navbar-collapse collapse">
						<ul class="nav navbar-nav main">

							<% if(params[:controller] == "welcome") %>
								<li class="active"><%= link_to "Routenplaner", root_path %></li>
							<% else %>
								<li><%= link_to "Routenplaner", root_path %></li>
							<% end %>
							<% if(params[:controller] == "statistic") %>
								<li class="active">
							<% else %>
								<li>
							<% end %>
							<%= link_to "Statistiken", controller: "statistic", action: "show" %></li>

							<% if(isLoggedIn() == true) %>

								<% if(params[:controller] == "users" && params[:action] == "dashboard") %>
									<li class="active"><a href="#">Meine Routen</a></li>
								<% else %>
									<li><a href="#">Meine Routen</a></li>
								<% end %>
								
								<li><%= link_to "Logout", controller: "users", action: "logout" %></li>
							<% else %>
								<% if(params[:controller] == "users" && params[:action] == "login") %>
									<li class="active"><%= link_to "Login", controller: "users", action: "login" %></li>
								<% else %>
									<li><%= link_to "Login", controller: "users", action: "login" %></li>
								<% end %>
							<% end %>
						</ul>
						<ul class="nav navbar-nav navbar-right">
							<div class="input-group">
	  							<span class="input-group-addon" id="basic-addon1">From</span>
	  							<input type="text" id="origin" class="form-control" placeholder="Salzburg" aria-describedby="basic-addon1">
							</div>
							<div class="input-group">
	  							<span class="input-group-addon" id="basic-addon1">To</span>
	  							<input type="text" id="destination" class="form-control" placeholder="MÃ¼nchen" aria-describedby="basic-addon1">
							</div>
							  <span class="glyphicon glyphicon-conf" aria-hidden="true"></span> 

						</ul>
						</div><!--/.nav-collapse -->
					</div>
				</nav>
		</header>
		
		<div class="container-fluid content">
			
			<% if flash[:error] %>
				<div class="alert alert-danger">
					<%= flash[:error] %>
				</div>
			<% end %>

			<% if flash[:notice] %>
				<div class="alert alert-info">
					<%= flash[:notice] %>
				</div>
			<% end %>

			<% if flash[:success] %>
				<div class="alert alert-success">
					<%= flash[:success] %>
				</div>
			<% end %>

			<%= yield %>
		</div>
	
<script>
$(document).ready(function() {

  $("#toggleNav").on('click',function(){
    $('nav').slideToggle();
    $(this).toggleClass('active',500);
  });

});
</script>

	</body>
</html>