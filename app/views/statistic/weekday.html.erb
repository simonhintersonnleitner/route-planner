<div class="row">
  <div id="mainStats" class=" stats col-xs-12 col-md-9 ">
    <h3>Wochentagauswertung</h3>

    <select id="city" size="1">
      <option value='all'>Alle Orte/St√§dte</option>
      <% for city in  ReferenceCities.all() %>
      <option value=<%= city.id %>><%= city.name %></option>
      <% end %>
    </select>
    <div id="chartWrapper">
      <canvas id="myChart" width="1000" height="300"></canvas>
    </div>
  </div>
  
  <div id="sidebar" class="col-xs-12 col-md-3">
       <%= render partial: "sidebarLinks" %>
  </div>
  <div class="clear"></div>
</div>

<script type="text/javascript">

$('#city').change(update);

var data = {
    labels: ['Sonntag','Montag','Dienstag','Mittwoch','Donnerstag','Freitag','Samstag'],
    datasets: [
        {
            label: "min Diesel",
            fillColor: "rgba(191,27,0,1)",
            strokeColor: "rgba(191,27,0,1)",
            pointColor: "rgba(191,27,0,1)",
            pointStrokeColor: "#fff",
            pointHighlightFill: "#fff",
            pointHighlightStroke: "rgba(220,220,220,1)",
            data: []
        },
        {
            label: "average Diesel",
            fillColor: "rgba(64,9,0,1)",
            strokeColor: "rgba(64,9,0,1)",
            pointColor: "rgba(64,9,0,1)",
            pointStrokeColor: "#fff",
            pointHighlightFill: "#fff",
            pointHighlightStroke: "rgba(220,220,220,1)",
            data: []
        }
    ]
};


update();

//A little later on with new data
function update(e) {

  $.ajax({
  url: "getCityDataByIdSortedByWeekday/" + $('#city').val(),
  }).done(function(json) 
  {
    
    //reset dataarrays
    for (var i = 0; i < 2; i++) 
      data.datasets[i].data = [];

    //reset canvas with recreating
    $("#myChart").remove();
    $("#chartWrapper").append("<canvas id='myChart' width='1000' height='500'></canvas>");

    var ctx = $("#myChart").get(0).getContext("2d");
    var myLineChart = new Chart(ctx); 
   
    for (var i = 0; i < json.length; i++) 
    {
      data.datasets[0].data.push(json[i].averageDiesel);
      data.datasets[1].data.push(json[i].averagePetrol);
    };

    console.log()
    myLineChart.Bar(data,{});
    });


}
</script>


